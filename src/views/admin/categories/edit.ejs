<%- include('../../partials/navbar.ejs') %>
<div class="container">
    <hr>
   
    <div class="card">
        <div class="card-header">
            <h2>Editar Categoria</h2>
        </div>
        <div class="card-body">
            <form action="/categories/update/" method="POST">             
                <input type="text" name="title" placeholder="Defina o titulo da categoria" class="form-control" value="<%= category.title %>">
                <input type="hidden" name="id" value="<%= category.id %>"><br>
                <button class="btn btn-success">
                    Atualizar
                </button>
            </form>
        </div>
    </div>
</div>
