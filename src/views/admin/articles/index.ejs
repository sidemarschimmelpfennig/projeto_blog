<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>

<div class="container">
    <br>
    <h2>Artigos</h2>
    <br>
        <a class="btn btn-success" href="/admin/articles/new">Criar novo  Artigo</a>
    <br>
    <br>
    <table class="table table-bordered" style="text-align: center;">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titulo</th>
                <th>Slug</th>
                <th>Categoria</th>
                <th>Editar</th>
                <th >Deletar</th>
            </tr>
        </thead>
        <tbody>          
            <% articles.forEach(article => { %>
                <tr>
                    <td><%= article.id %></td>
                    <td><%= article.title %></td>
                    <td><%= article.slug %></td>
                    <td><%= article.category.title %></td>
                    <td>
                        <form method="get" action="/admin/articles/edit/<%= article.id %>" style="display: inline;" >
                            <input type="hidden" name="id" value="<%= article.id %>">
                            <button class="btn btn-warning" >Editar</button>
                        </form>
                    </td>  
                    <td>
                        <form action="/articles/delete" method="POST" style="display: inline;" onsubmit="deleteCategory(event, this)">
                            <input type="hidden" name="id" value="<%= article.id %>">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>   
            <%})%>
        </tbody>
    </table>
</div>
<%- include('../../partials/footer.ejs') %>
<script>
    function deleteCategory(e, form){
        e.preventDefault();
        let decision =confirm("Deseja deletar o artigo?")
        if(decision){
            form.submit()
        }
    }
</script>
